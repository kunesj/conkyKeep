-- Set own_window_type to normal if you don't want ConkyKeep on all desktops
-- Also set own_window_type to normal if you use Xfce
conky.config = {
    update_interval = 10.0,
    total_run_times = 0,

    background = true,
    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true, --false, -- Set to true for full transparancy
    own_window_hints = 'undecorated,sticky,skip_taskbar,skip_pager,below',

    alignment = 'top_right',
    gap_x = 0,
    gap_y = 35,
    minimum_height = 1080,
    minimum_width = 1000,

    out_to_console = false,
    out_to_stderr = false,
    override_utf8_locale = true,
    double_buffer = true,
    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    stippled_borders = 0,
    default_color = white,
    no_buffers = true,
    uppercase = false,
    use_spacer = left,
    -- important, standard size for var buffer is 128bit
    imlib_cache_size = 0,
    text_buffer_size = 6000

    }

conky.text = [[ ${execpi 600 python3 -m conkyKeep } ]]

